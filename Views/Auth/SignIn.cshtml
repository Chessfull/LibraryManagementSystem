@model SignInViewModel

<section class="sign-up-form-container">
    <div class="wrapper">
        <h2>Sign In</h2>

        <form method="post" asp-controller="Auth" asp-action="SignIn">




            <div class="input-box">
                <input asp-for=Email type="text" placeholder="Enter your email" required>
            </div>

           

            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Enter password" required>
            </div>
           

         

            <div class="input-box button">
                <input type="Submit" value="Join Now">
            </div>

        </form>
    </div>
</section>